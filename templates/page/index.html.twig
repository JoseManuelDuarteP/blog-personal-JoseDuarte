        </div>
        
        <div class="category-tabs">
            <button class="tab-btn active" data-category="All">All</button>
            <button class="tab-btn" data-category="Unisex">Unisex</button>
            <button class="tab-btn" data-category="Women">Women</button>
            <button class="tab-btn" data-category="Men">Men</button>
            <button class="tab-btn" data-category="Accessories">Accessories</button>
            <button class="tab-btn" data-category="Limited Edition">Limited Edition</button>
        </div>

        <div class="grid" id="collectionsGrid">
            {% for image in images %}
                <div class="collection-card">
                    <div class="collection-thumbnail">
                        <a href="{{ path('product_file', {'id': image.id}) }}">
                            <img src="/images/index/gallery/{{ image.file }}" alt="Collection Image {{ image.id }}">
                        </a>
                    </div>
                    <div class="card-content">
                        <span class="card-badge">{{ image.category.name }}</span>
                        <h3 class="card-title">{{ image.title }}</h3>
                        <p class="card-subtitle">Views: {{ image.numViews }}</p>
                        <p class="card-subtitle">Likes: {{ image.numLikes }}</p>
                        <p class="card-price">${{ image.price }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
