{% extends 'base.html.twig' %}
{% block title %}Fasion Blog{% endblock %}

{% block body %}
    <section class="featured" id="featured">
        <div class="featured-container">
            <div class="featured-hero">
                <div class="featured-content">
                    <span class="label">Recent Posts</span>
                    <h2>Fashion Blog</h2>
                    <p>Learn about the most recent fashion trends and insights from our community and experts.</p>
                    <a href="{{ path('new_post') }}" class="feature-cta">Post Yourself NOW!</a>
                    
                    <div class="feature-highlights">
                        {% for post in posts %}
                            <a href="{{ path('blog_post', {'id': post.id}) }}">
                                <div class="highlight-item">
                                    <img style="max-width: 600px; height: auto;" src="images/index/gallery/{{ post.imagen }}" alt="{{ post.titulo }}">
                                    <div class="highlight-title tituloPost">{{ post.titulo }}</div>
                                    <div class="highlight-desc">{{ post.text }}</div>
                                    <div class="highlight-title likesPost">LIKES: {{ post.getLikePosts | length }}</div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}