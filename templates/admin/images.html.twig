{% extends 'base.html.twig' %}
{% block title%}Images{% endblock %}
{% block body %}
    <div class="cat-container">
        <div class="cat-form-wrapper">
        <h2 class="section-title">Make Image</h2>
        {{ form_start(imageForm) }}
            <div class="form-group">
                <label for="{{ imageForm.file.vars.id }}">Image:</label>
                {{ form_widget(imageForm.file) }}
            </div>
			<div class="form-group">
				<label for="{{ imageForm.title.vars.id }}">Title:</label>
				{{ form_widget(imageForm.title) }}
			</div>
			<div class="form-group">
				<label for="{{ imageForm.price.vars.id }}">Price:</label>
				{{ form_widget(imageForm.price) }}
				{{ form_errors(imageForm.price) }}
			</div>
			<div class="form-group">
				<label for="{{ imageForm.category.vars.id }}">Category:</label>
				{{ form_widget(imageForm.category) }}
			</div>
			<div class="form-group">
				<label for="{{ imageForm.numLikes.vars.id }}">Number of Likes:</label>
				{{ form_widget(imageForm.numLikes) }}
			</div>
			<div class="form-group">
				<label for="{{ imageForm.numViews.vars.id }}">Number of Views:</label>
				{{ form_widget(imageForm.numViews) }}
			</div>
            <button type="submit" class="form-submit">Create Image</button>
        {{ form_end(imageForm) }}
		<hr class="separator">
        <div class="table-wrapper">
            <table>
                <thead>
                <tr>
                    <th scope="col">#</th>
					<th scope="col">Image</th>
					<th scope="col">Title</th>
                    <th scope="col">Price</th>
					<th scope="col">Likes</th>
					<th scope="col">Views</th>
					<th scope="col">Category</th>
                </tr>
                </thead>
                <tbody>
                {% for image in images %}
                <tr>
                    <th scope="row">{{ image.id }}</th>
					<td><img src="/images/index/gallery/{{ image.file }}" alt="Image {{ image.id }}" width="100"></td>
					<td>{{ image.title }}</td>
                    <td>{{ image.price }}</td>
					<td>{{ image.numLikes }}</td>
					<td>{{ image.numViews }}</td>
					<td>{{ image.category.name }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
