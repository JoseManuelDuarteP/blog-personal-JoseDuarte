{% extends 'base.html.twig' %}
{% block title%}Categories{% endblock %}
{% block body %}
    <div class="cat-container">
        <div class="cat-form-wrapper">
        <h2 class="section-title">Make Category</h2>
        {{ form_start(categoryForm) }}
            <div class="form-group">
                <label for="{{ categoryForm.name.vars.id }}">Name:</label>
                {{ form_widget(categoryForm.name) }}
            </div>
            <button type="submit" class="form-submit">Create Category</button>
        {{ form_end(categoryForm) }}
        <hr class="separator">
        <div class="table-wrapper">
            <table>
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                <tr>
                    <th scope="row">{{ category.id }}</th>
                    <td>{{ category.name }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
